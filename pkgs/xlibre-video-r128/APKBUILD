# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-r128
pkgver="25.0.0"
pkgrel=0
pkgdesc="Xlibre ATI Rage128 video driver"
url="https://github.com/X11Libre/xf86-video-r128"
arch="all !loongarch64"
license="MIT"
depends="mesa-dri-gallium"
makedepends="
	autoconf
	automake
	libtool
	util-macros
	expat-dev
	libdrm-dev
	libxi-dev
	mesa-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-r128/archive/refs/tags/xlibre-xf86-video-r128-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-r128-xlibre-xf86-video-r128-$pkgver"
provides="xf86-video-r128=$pkgver-r$pkgrel"
replaces="xf86-video-r128"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-dri
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
7c341aab59ae4a844066b3ae1faa8dd2d3f5e089b95e1290ce9d6b658272a5bc0e8dd48214d959ed1b4023f30ed51119ad9e72324119bba62b5bc455ca263359  xlibre-xf86-video-r128-25.0.0.tar.gz
"
