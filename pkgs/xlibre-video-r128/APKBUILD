# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-r128
pkgver="6.13.0.3"
pkgrel=0
pkgdesc="Xlibre ATI Rage128 video driver"
url="https://github.com/X11Libre/xf86-video-r128"
arch="all !loongarch64"
license="MIT"
depends="mesa-dri-gallium"
makedepends="
	autoconf
	automake
	libtool
	util-macros
	expat-dev
	libdrm-dev
	libxi-dev
	mesa-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-r128/archive/refs/tags/xlibre-xf86-video-r128-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-r128-xlibre-xf86-video-r128-$pkgver"
provides="xf86-video-r128=$pkgver-r$pkgrel"
replaces="xf86-video-r128"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-dri
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
b2c47013014aa16a839f0122e07cbac5d4931cd338a40d8d4d1c04efb9e566c2c5c9f672ef31cb3b2377fe89219d4af8a8dfeca67e83bddadfc22df5a9fb9527  xlibre-xf86-video-r128-6.13.0.3.tar.gz
"
