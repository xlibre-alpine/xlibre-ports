# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-nv
pkgver="2.1.23.2"
pkgrel=0
pkgdesc="Xlibre Nvidia video driver"
url="https://github.com/X11Libre/xf86-video-nv"
arch="all"
license="MIT"
subpackages="$pkgname-doc"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto"
source="
https://github.com/X11Libre/xf86-video-nv/archive/refs/tags/xlibre-xf86-video-nv-$pkgver.tar.gz
gcc14-revert-fix-nv-powerpc.patch
"
builddir="$srcdir/xf86-video-nv-xlibre-xf86-video-nv-$pkgver"
provides="xf86-video-nv=$pkgver-r$pkgrel"
replaces="xf86-video-nv"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

