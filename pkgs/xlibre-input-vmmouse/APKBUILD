# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-input-vmmouse
pkgver="25.0.0"
pkgrel=1
pkgdesc="Xlibre VMware mouse input driver"
url="https://github.com/X11Libre/xf86-input-vmmouse"
arch="x86 x86_64 arm64"
license="MIT"
subpackages="$pkgname-doc"
makedepends="
	libxkbfile-dev
	xlibre-xserver-dev
	libxi-dev
	libxrandr-dev
	eudev-dev
	autoconf
	automake
	libtool
"
source="https://github.com/X11Libre/xf86-input-vmmouse/archive/refs/tags/xlibre-xf86-input-vmmouse-$pkgver.tar.gz"
builddir="$srcdir/xf86-input-vmmouse-xlibre-xf86-input-vmmouse-$pkgver"
provides="xf86-input-vmmouse=$pkgver-r$pkgrel"
replaces="xf86-input-vmmouse"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
15a2ab5cb6232e2fe47a9750ae152a89609687571a78307828a32908a820433f50e0469ba84274f980bf6f5fb9d9caffbd3b656146d87e981480492b0aa3d761  xlibre-xf86-input-vmmouse-25.0.0.tar.gz
"
