# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-apm
pkgver="25.0.0"
pkgrel=1
pkgdesc="Xlibre Alliance ProMotion video driver"
url="https://github.com/X11Libre/xf86-video-apm"
arch="x86 x86_64"
license="MIT"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-apm/archive/refs/tags/xlibre-xf86-video-apm-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-apm-xlibre-xf86-video-apm-$pkgver"
provides="xf86-video-apm=$pkgver-r$pkgrel"
replaces="xf86-video-apm"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr 
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
dd4b3005fcaf6bc92578d796c075ca3cd6155744b36d6f877e2da11df9bd6d7440c737a60aaa2db6e568ba06ee679925d712e94abc3e8329adc8da0e5861eecb  xlibre-xf86-video-apm-25.0.0.tar.gz
"
