# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-amdgpu
pkgver=23.0.0.6
pkgrel=0
pkgdesc="Xlibre AMD Rx/HDxxxx video driver"
url="https://github.com/X11Libre/xf86-video-amdgpu"
arch="all"
license="MIT"
depends="mesa-dri-gallium"
makedepends="
	eudev-dev
	libdrm-dev
	libpciaccess-dev
	libxi-dev
	mesa-dev
	pixman-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-amdgpu/archive/refs/tags/xlibre-xf86-video-amdgpu-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-amdgpu-xlibre-xf86-video-amdgpu-$pkgver"
provides="xf86-video-amdgpu=$pkgver-r$pkgrel"
replaces="xf86-video-amdgpu"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
