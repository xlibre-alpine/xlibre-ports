# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-amdgpu
pkgver="25.1.1"
pkgrel=0
pkgdesc="Xlibre AMD Rx/HDxxxx video driver"
url="https://github.com/X11Libre/xf86-video-amdgpu"
arch="all"
license="MIT"
depends="mesa-dri-gallium"
makedepends="
	eudev-dev
	libdrm-dev
	libpciaccess-dev
	libxi-dev
	mesa-dev
	pixman-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	autoconf 
	automake
	libtool
	"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-amdgpu/archive/refs/tags/xlibre-xf86-video-amdgpu-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-amdgpu-xlibre-xf86-video-amdgpu-$pkgver"
provides="xf86-video-amdgpu=$pkgver-r$pkgrel"
replaces="xf86-video-amdgpu"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
24983429c4e9632f78086d504e34bccfe817d4ff474a92badf707e4510bc31e6f53d2c198c38d65d84a56f84d9be407b5fa521dee5959e14dbe7c96c3754b4a4  xlibre-xf86-video-amdgpu-25.0.3.tar.gz
"
