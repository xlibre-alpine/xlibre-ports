# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-amdgpu
pkgver="25.1.0"
pkgrel=0
pkgdesc="Xlibre AMD Rx/HDxxxx video driver"
url="https://github.com/X11Libre/xf86-video-amdgpu"
arch="all"
license="MIT"
depends="mesa-dri-gallium"
makedepends="
	eudev-dev
	libdrm-dev
	libpciaccess-dev
	libxi-dev
	mesa-dev
	pixman-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	autoconf 
	automake
	libtool
	"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-amdgpu/archive/refs/tags/xlibre-xf86-video-amdgpu-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-amdgpu-xlibre-xf86-video-amdgpu-$pkgver"
provides="xf86-video-amdgpu=$pkgver-r$pkgrel"
replaces="xf86-video-amdgpu"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
28e002dca920e61e4e4f74bff09c36d1234393f55810d4cd638a295404b56fc2677018ed38efb421c97585ffc59644f9a0a5d098fbb67f417411e6ae3c1407d7  xlibre-xf86-video-amdgpu-25.1.0.tar.gz
"
