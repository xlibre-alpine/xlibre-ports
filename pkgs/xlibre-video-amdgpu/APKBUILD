# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-amdgpu
pkgver="25.1.1"
pkgrel=0
pkgdesc="Xlibre AMD Rx/HDxxxx video driver"
url="https://github.com/X11Libre/xf86-video-amdgpu"
arch="all"
license="MIT"
depends="mesa-dri-gallium"
makedepends="
	eudev-dev
	libdrm-dev
	libpciaccess-dev
	libxi-dev
	mesa-dev
	pixman-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	autoconf 
	automake
	libtool
	"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-amdgpu/archive/refs/tags/xlibre-xf86-video-amdgpu-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-amdgpu-xlibre-xf86-video-amdgpu-$pkgver"
provides="xf86-video-amdgpu=$pkgver-r$pkgrel"
replaces="xf86-video-amdgpu"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
40fca3a2f1a41aeedcefaff5fbc6f9556ee94b35844115cf595f99e98f83f33ec8184ebc95f811aabaf5cb798d229fb12dac7592dba66a112bf1f875972f7b07  xlibre-xf86-video-amdgpu-25.1.1.tar.gz
"
