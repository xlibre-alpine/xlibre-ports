# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-vmware
pkgver="25.0.0"
pkgrel=1
pkgdesc="Xlibre VMWare video driver"
url="https://github.com/X11Libre/xf86-video-vmware"
arch="x86 x86_64 arm64"
license="MIT"
subpackages="$pkgname-doc"
makedepends="
	eudev-dev
	libdrm-dev
	libxi-dev
	util-macros
	xlibre-xserver-dev
	xorgproto
	autoconf 
	automake
	libtool
	"
source="https://github.com/X11Libre/xf86-video-vmware/archive/refs/tags/xlibre-xf86-video-vmware-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-vmware-xlibre-xf86-video-vmware-$pkgver"
provides="xf86-video-vmware=$pkgver-r$pkgrel"
replaces="xf86-video-vmware"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-vmwarectrl-client
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
bf313507dd3f2b54c151269ac59c1a27cb6122603f3b11ae50620ff77d930b45d2cdbc9ae943cb100cd6a164cb520e50499441ebdf0e1f22fa045fe3c0a91a5d  xlibre-xf86-video-vmware-25.0.0.tar.gz
"
