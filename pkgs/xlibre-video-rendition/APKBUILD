# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-rendition
pkgver="25.0.0"
pkgrel=0
pkgdesc="Xlibre Rendition video driver"
url="https://github.com/X11Libre/xf86-video-rendition"
arch="x86 x86_64"
license="MIT"
options="!strip"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-rendition/archive/refs/tags/xlibre-xf86-video-rendition-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-rendition-xlibre-xf86-video-rendition-$pkgver"
provides="xf86-video-rendition=$pkgver-r$pkgrel"
replaces="xf86-video-rendition"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install

	# Stripping manually
	strip $pkgdir/usr/lib/xorg/modules/xlibre-25.0/drivers/rendition_drv.so
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

