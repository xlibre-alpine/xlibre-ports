# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-dummy
pkgver="0.4.1.4"
pkgrel=0
pkgdesc="Xlibre driver for dummy cards"
url="https://github.com/X11Libre/xf86-video-dummy"
arch="all"
license="MIT"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto"
source="https://github.com/X11Libre/xf86-video-dummy/archive/refs/tags/xlibre-xf86-video-dummy-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-dummy-xlibre-xf86-video-dummy-$pkgver"
provides="xf86-video-dummy=$pkgver-r$pkgrel"
replaces="xf86-video-dummy"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
fe8a1c1e05e7dc3aef3e66476223e695d178d20035869da203e711a9094584ab13e3c0facb2f70a2b505afba0f44a8fb4e72e43383824c97a2b088471d5d374f  xlibre-xf86-video-dummy-0.4.1.4.tar.gz
"
