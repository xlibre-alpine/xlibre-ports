# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-vesa
pkgver="25.0.0"
pkgrel=1
pkgdesc="XLibre generic VESA video driver"
url="https://github.com/X11Libre/xf86-video-vesa"
arch="x86 x86_64 arm64"
license="MIT"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto autoconf automake libtool"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-vesa/archive/refs/tags/xlibre-xf86-video-vesa-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-vesa-xlibre-xf86-video-vesa-$pkgver"
provides="xf86-video-vesa=$pkgver-r$pkgrel"
replaces="xf86-video-vesa"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
6d740f508370f9f7e627230daa0a98b2e9868963c02591aadeb7fefd81d9b725b1b23fba9a2460acacd971f01ddb1ba732821a1d7bba3ce979613a5074d2d74b  xlibre-xf86-video-vesa-25.0.0.tar.gz
"
