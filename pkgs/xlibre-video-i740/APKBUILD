# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-i740
pkgver="1.4.0.2"
pkgrel=0
pkgdesc="Xlibre Intel i740 video driver"
url="https://github.com/X11Libre/xf86-video-i740"
arch="x86 x86_64"
license="MIT"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-i740/archive/refs/tags/xlibre-xf86-video-i740-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-i740-xlibre-xf86-video-i740-$pkgver"
provides="xf86-video-i740=$pkgver-r$pkgrel"
replaces="xf86-video-i740"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
6fb3fe3feb143abfa1c8fa52e74315c90ae3697b3f15428984cd160735e0cbe3ec3738458ccc0fd774318e0708eed13fb74b08b0297fec7781f21d96707b895e  xlibre-xf86-video-i740-1.4.0.2.tar.gz
"
