# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-sis
pkgver="25.0.0"
pkgrel=0
pkgdesc="Xlibre SiS video driver"
url="https://github.com/X11Libre/xf86-video-sis"
arch="x86 x86_64"
license="MIT"
makedepends="xlibre-xserver-dev util-macros mesa-dev libxi-dev xorgproto"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-sis/archive/refs/tags/xlibre-xf86-video-sis-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-sis-xlibre-xf86-video-sis-$pkgver"
provides="xf86-video-sis=$pkgver-r$pkgrel"
replaces="xf86-video-sis"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

