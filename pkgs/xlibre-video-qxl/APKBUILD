# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-qxl
pkgver="25.0.0"
pkgrel=0
pkgdesc="Xlibre QXL video driver"
options="!check" # No testsuite
url="https://github.com/X11Libre/xf86-video-qxl"
arch="x86 x86_64"
license="MIT"
makedepends="xlibre-xserver-dev spice-dev xorgproto libpciaccess-dev"
subpackages="$pkgname-doc xspice"
source="https://github.com/X11Libre/xf86-video-qxl/archive/refs/tags/xlibre-xf86-video-qxl-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-qxl-xlibre-xf86-video-qxl-$pkgver"
provides="xf86-video-qxl=$pkgver-r$pkgrel"
replaces="xf86-video-qxl"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-xspice=yes
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

xspice() {
	pkgdesc="X server that can be accessed by a Spice client"
	depends="python3"
	mkdir -p "$subpkgdir"/usr/lib/xorg/modules/xlibre-25.0/drivers \
		"$subpkgdir"/etc/X11
	mv "$pkgdir"/usr/lib/xorg/modules/xlibre-25.0/drivers/spiceqxl_drv.so \
		"$subpkgdir"/usr/lib/xorg/modules/xlibre-25.0/drivers/
	mv "$pkgdir"/usr/lib/xorg/modules/xlibre-25.0/drivers/spiceqxl_drv.la \
		"$subpkgdir"/usr/lib/xorg/modules/xlibre-25.0/drivers/
	mv "$pkgdir"/usr/bin/ "$subpkgdir"/usr/
	install -m 644 "$builddir"/examples/spiceqxl.xorg.conf.example \
		"$subpkgdir"/etc/X11/spiceqxl.xorg.conf
}

sha512sums="
eec241e73d35c285a0da2ede08d3ac680b3005744a8249dcbe3aa7d0744d269cc782adfceb32d6ec69ce352f4bbd0efac71a5581f2a167dbd42c039eb4add4cc  xlibre-xf86-video-qxl-25.0.0.tar.gz
"
