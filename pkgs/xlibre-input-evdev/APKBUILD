# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-input-evdev
pkgver="25.0.0"
pkgrel=1
pkgdesc="Xlibre evdev input driver"
url="https://github.com/X11Libre/xf86-input-evdev"
arch="all"
license="MIT"
subpackages="$pkgname-doc $pkgname-dev"
makedepends="libxkbfile-dev xlibre-xserver-dev libxi-dev libxrandr-dev
	eudev-dev mtdev-dev libevdev-dev autoconf automake libtool"
source="https://github.com/X11Libre/xf86-input-evdev/archive/refs/tags/xlibre-xf86-input-evdev-$pkgver.tar.gz"
builddir="$srcdir/xf86-input-evdev-xlibre-xf86-input-evdev-$pkgver"
provides="xf86-input-evdev=$pkgver-r$pkgrel"
replaces="xf86-input-evdev"

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
b7498056f7394ffdf627a1db228bccc74e25eb9262ca45b1b01189ec57587092ddc56fe49dfcf28ea2829e3cee633cec4e150c3d43eb1bff39554f6200b549b6  xlibre-xf86-input-evdev-25.0.0.tar.gz
"
