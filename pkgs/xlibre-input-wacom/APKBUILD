# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-input-wacom
pkgver="1.2.3.2"
pkgrel=0
pkgdesc="Xlibre Wacom tablet input driver"
url="https://github.com/X11Libre/xf86-input-wacom"
arch="all"
license="GPL-2.0-or-later"
makedepends="eudev-dev
	libpciaccess-dev
	libxext-dev
	libxi-dev
	libxinerama-dev
	libxrandr-dev
	util-macros
	xlibre-xserver-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/X11Libre/xf86-input-wacom/archive/refs/tags/xlibre-xf86-input-wacom-$pkgver.tar.gz"
builddir="$srcdir/xf86-input-wacom-xlibre-xf86-input-wacom-$pkgver"
provides="xf86-input-wacom=$pkgver-r$pkgrel"
replaces="xf86-input-wacom"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output || true
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
