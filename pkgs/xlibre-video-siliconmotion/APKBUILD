# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-siliconmotion
pkgver="25.0.0"
pkgrel=1
pkgdesc="Xlibre Silicon Motion video driver"
url="https://github.com/X11Libre/xf86-video-siliconmotion"
arch="x86 x86_64"
license="MIT"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto"
subpackages="$pkgname-doc"
source="https://github.com/X11Libre/xf86-video-siliconmotion/archive/refs/tags/xlibre-xf86-video-siliconmotion-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-siliconmotion-xlibre-xf86-video-siliconmotion-$pkgver"
provides="xf86-video-siliconmotion=$pkgver-r$pkgrel"
replaces="xf86-video-siliconmotion"

prepare() {
	default_prepare
	autoreconf -fi
}

build() {	
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
0ed846d2a56fd3bd2acc77176d41b08f9b4ac456726f9e537eec80c4b9b797fd7b8178a4e6e3324c1d12eb2db466b8059cfd65e06118c5d6202a506d6b5aef20  xlibre-xf86-video-siliconmotion-25.0.0.tar.gz
"
