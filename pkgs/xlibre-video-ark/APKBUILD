# Maintainer: matik <wierzejskimateusz8@gmail.com>
pkgname=xlibre-video-ark
pkgver="0.7.6.2"
pkgrel=0
pkgdesc="Xlibre driver for ark cards"
url="https://github.com/X11Libre/xf86-video-ark"
arch="x86 x86_64"
license="MIT"
makedepends="xlibre-xserver-dev libxi-dev util-macros xorgproto autoconf automake libtool"
source="https://github.com/X11Libre/xf86-video-ark/archive/refs/tags/xlibre-xf86-video-ark-$pkgver.tar.gz"
builddir="$srcdir/xf86-video-ark-xlibre-xf86-video-ark-$pkgver"
provides="xf86-video-ark=$pkgver-r$pkgrel"
replaces="xf86-video-ark"

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check || true
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
b8d504b87eec058f94eb3b8c2fc937f835d191d108f36453c0afa7f6006c47fef7961015cd97e80c43f8f93c05cb191524481fe4555e8604f132586031246226  xlibre-xf86-video-ark-0.7.6.2.tar.gz
"
